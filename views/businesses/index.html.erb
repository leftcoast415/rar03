<h1>Listing businesses</h1>

<table>
  <thead>
    <tr>
      <th>Business name</th>
      <th>Category</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.business_name %> </td>
        <td>| <%= business.category.category_name %> </td>
        <td>| <%= business.category.city.city_name %> </td>
        <td>| <%= link_to 'Show', business %> </td>
        <td>| <%= link_to 'Edit', edit_business_path(business) %> </td>
        <td>| <%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

