<%= form_for([@business, @business.reviews.build]) do |f| %>


  <div class="field">
    <%= f.label :review_text %><br>
    <%= f.text_area :review_text, :rows => 10, :cols => 100 %>
  </div>
  
  <div class="field">
    <%= f.label :review_rating, "Review rating (5 = Best, 1 = Worst)" %><br>
    <%= f.select :review_rating, (1..5).to_a.reverse, include_blank: true %>
  </div>

  
    User: <%= current_user.username %><br>   
    <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="field">
    <%= f.hidden_field :business_id %>
  </div>

  <div class="actions">
    <%= f.submit "Submit Review" %>
  </div>
<% end %>
