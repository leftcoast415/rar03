<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :review_text %><br>
    <%= f.text_area :review_text, :rows => 10, :cols => 100 %>
  </div>
  <div class="field">
    <%= f.label :review_rating, "Review rating (5 = Best, 1 = Worst)" %><br>
    <%= f.select :review_rating, (1..5).to_a.reverse, include_blank: true %>
  </div>

